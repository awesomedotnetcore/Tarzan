{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "typeRoots": [ "node_modules/@types" ],
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "types": [ "webpack-env" ],
    "lib": [ "dom", "es2015.promise", "es5" ]
  },
  "exclude": [
      "bin",
      "node_modules"
  ]
}
